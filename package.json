{
  "name": "token-price-service",
  "version": "1.0.0",
  "description": "A token price service with intentional anti-patterns and bugs for educational purposes",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --detectOpenHandles",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "drizzle-kit generate --config drizzle.config.ts",
    "migration:run": "drizzle-kit migrate --config drizzle.config.ts",
    "db:seed": "ts-node -r tsconfig-paths/register src/data/seed.ts"
  },
  "keywords": [
    "nestjs",
    "typescript",
    "kafka",
    "postgresql",
    "typeorm"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/static": "^8.0.0",
    "@knaadh/nestjs-drizzle-pg": "^1.2.0",
    "@knaadh/nestjs-drizzle-postgres": "^1.2.0",
    "@nestjs-cls/transactional": "^3.1.0",
    "@nestjs-cls/transactional-adapter-drizzle-orm": "^1.2.0",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-fastify": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/terminus": "^11.0.0",
    "@opentelemetry/api": "^1.9.0",
    "@torixtv/nestjs-kafka": "^0.2.2",
    "drizzle-orm": "^0.44.6",
    "drizzle-zod": "^0.8.3",
    "fastify": "5.4.0",
    "kafkajs": "^2.2.4",
    "lodash": "^4.17.21",
    "nestjs-cls": "^6.0.1",
    "nestjs-zod": "^5.0.1",
    "pg": "^8.16.3",
    "pg-boss": "^9.0.3",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.1",
    "typescript-memoize": "^1.1.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.7",
    "@nestjs/testing": "^11.1.6",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.20",
    "@types/node": "^20.19.19",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "drizzle-kit": "^0.31.5",
    "drizzle-seed": "^0.3.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.2",
    "eslint-plugin-prettier": "^4.2.5",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0",
    "moment": "^2.30.1",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "testcontainers": "^10.28.0",
    "ts-jest": "^29.4.4",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
